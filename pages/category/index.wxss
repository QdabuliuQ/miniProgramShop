.cates{
  width: 100%;
  height: 100%;
}
.scrollBox{
  width: 100%;
  height: calc(100vh - 80rpx);
  display: flex;
}
.leftMenu{
  flex: 2;
  background-color: rgb(246, 246, 246);
}
.rightContent{
  flex: 5;
}
.menuItem{
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.text{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.activeItem{
  border-left: 2px solid var(--themeColor);
  color: var(--themeColor);
  
}
.activeItem2{
  background-color: #fff;
}
.catesBox{
  padding: 0 20rpx;
  margin-bottom: 20rpx;
}
.catesItem{
  width: 100%;
  margin-top: 30rpx;
}
.catesTitle{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 550;
}
.catesGoods{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.goodsItem{
  width: 30%;
  height: 200rpx;
  /* float: left; */
  margin-left: 1.5%;
  margin-right: 1.5%;
  text-align: center;
  font-size: 26rpx;
}
.goodsItem image{
  width: 80%;
  height: 120rpx;
  margin-bottom: 20rpx;
}