.goodsList{
  padding: 24rpx;
  min-height: calc(100vh - 70rpx);
  background-color: #eeeeee;
  margin-top: 70rpx;
}
.goods_order_item{
  padding: 24rpx;
  width: 100%;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.goods_order_glist{
  width: 100%;
}
.item{
  width: 100%;
  height: 190rpx;
  display: flex;
}
.mbottom{
  margin-bottom: 20rpx;
}
.goodsImage{
  flex: 4;
  margin-right: 20rpx;
}
.goodsImage image{
  height: 100%;
  width: 190rpx;
}
.goodsDetail{
  flex: 5;
}
.priceNum{
  width: 100%;
  height: 48rpx;
}
.title{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}
.goodsdetail{
  display: flex;
  align-items: center;
}
.price{
  width: 50%;
  height: 100%;
  font-size: 36rpx;
  color: var(--themeColor);
  float: left;
}
.num{
  width: 50%;
  height: 100%;
  line-height: 48rpx;
  float: right;
  text-align: right;
  color: #b1b1b1;
}
.show_order_title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #b1b1b1;
  font-size: 24rpx;
}
.icon-xiangxia{
  float: right;
  width: 35rpx;
  height: 35rpx;
  font-size: 28rpx;
}
.icon-xiangshang{
  float: right;
  width: 35rpx;
  height: 35rpx;
  font-size: 28rpx;
}
.show_order_title_text{
  width: 220rpx;
  margin: auto;
}
.hoverTitle{
  background-color: rgb(247, 247, 247);
}
.show_order_detail_container{
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #868686;
}
.order_tabs{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
}